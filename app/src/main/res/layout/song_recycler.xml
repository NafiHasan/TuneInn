<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:anddroid="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/music_item"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:paddingTop="10dp"
    android:background="@drawable/gradient_blur_5"
    android:paddingBottom="10dp">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/inner_r_layout">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/music_image"
        android:padding="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="File name"
        android:id="@+id/music_file_name"
        android:layout_toEndOf="@id/music_image"
        android:layout_marginStart="10dp"
        android:layout_centerVertical="true"
        android:singleLine="true"
        android:textColor="@color/white"/>
</RelativeLayout>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/music_options_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="40dp"
        android:layout_toEndOf="@id/inner_r_layout"
        android:background="@color/light_black"
        android:src="@drawable/ic_baseline_more_vert_24" />
</RelativeLayout>