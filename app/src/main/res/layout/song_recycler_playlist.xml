<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/music_item_playlist_song"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:paddingTop="10dp"
    android:background="@drawable/gradient_blur_5"
    android:paddingBottom="10dp">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/inner_r_layout_playlist">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/music_image_playlist_recycler"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/music_file_name_playlist_recycler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="40dp"
            android:layout_toEndOf="@id/music_image_playlist_recycler"
            android:singleLine="true"
            android:text="File name"
            android:textColor="@color/white" />
    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/drag_handle_playlist_recycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/inner_r_layout_playlist"
        android:layout_marginStart="20dp"
        android:background="@color/light_black"
        android:src="@drawable/ic_baseline_drag_handle_24" />


    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/playlist_music_options_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@id/drag_handle_playlist_recycler"
        android:background="@color/light_black"
        android:src="@drawable/ic_baseline_more_vert_24" />

</RelativeLayout>