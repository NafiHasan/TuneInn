<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/dark_green">

    <Button
        android:id="@+id/partyButton"
        android:layout_width="124dp"
        android:layout_height="74dp"
        android:layout_marginTop="80dp"

        android:text="Party"
        android:textColor="@color/white"
        android:backgroundTint="@color/light_green"
        android:textStyle="bold"
        android:textSize="18sp"


        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/playerButton"
        android:layout_width="124dp"
        android:layout_height="74dp"
        android:layout_marginTop="50dp"


        android:text="Player"
        android:textColor="@color/white"
        android:backgroundTint="@color/light_green"
        android:textStyle="bold"
        android:textSize="18sp"


        app:layout_constraintEnd_toEndOf="@+id/partyButton"
        app:layout_constraintStart_toStartOf="@+id/partyButton"
        app:layout_constraintTop_toBottomOf="@+id/partyButton" />

    <Button
        android:id="@+id/profileButton"
        android:layout_width="124dp"
        android:layout_height="74dp"
        android:layout_marginTop="50dp"


        android:text="Profile"
        android:textColor="@color/white"
        android:backgroundTint="@color/light_green"
        android:textStyle="bold"
        android:textSize="18sp"


        app:layout_constraintEnd_toEndOf="@+id/playerButton"
        app:layout_constraintStart_toStartOf="@+id/playerButton"
        app:layout_constraintTop_toBottomOf="@+id/playerButton" />

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="124dp"
        android:layout_height="74dp"
        android:layout_marginTop="50dp"


        android:text="Logout"
        android:textColor="@color/white"
        android:backgroundTint="@color/light_green"
        android:textStyle="bold"
        android:textSize="18sp"


        app:layout_constraintEnd_toEndOf="@+id/profileButton"
        app:layout_constraintStart_toStartOf="@+id/profileButton"
        app:layout_constraintTop_toBottomOf="@+id/profileButton" />
</androidx.constraintlayout.widget.ConstraintLayout>